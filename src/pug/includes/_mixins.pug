//-footer mixins
mixin footerA(text)
	a(href="#").link-f #{text}
mixin footerb(text)
	a != #{text}
	li.footer-dop-item
		a(href="#") #{text}
mixin footerNum(num, text)
	a(href="tel:3333").footer-tel-item
		.text-bold #{num}
		span.footer-tel-text #{text}
//- header mixins
//- main-mixins
mixin card(img, title, type)
	.card-item-wrap
		a.card-item(href="#", style='background-image:url(img/cards/'+img+')')
			.card-item-content
				.title.h4 #{title}
				if block
					block
			.card-item-type 
				.small-block 
					span #{type}
mixin romb(img, text)
	a(href="#").romb-item-item
		.romb-item-wrap
			.romb-item-middle
				.romb-item-inner(style='background-image:url(img/romb/'+img+')')
		.romb-item-text.title.h4 #{text}
mixin news(text, date,img, type)
	article.news-item
		a(href="#").news-item-inner
			.news-image
				if img != ''
					img(src="img/news/"+img+"", alt="")
				if type
					.news-type
						.small-block.small
							span #{type}
			.news-content
				date.text2 #{date}
				h2.title.h4 #{text}
mixin partner(img)
	.partner-item
		.partner-item-inner
			img(src="img/partner/"+img+"", alt="partner")


