extends _layout

block title
	title Вопрос-ответ

block content
	.wrapper.content-wrapper(style='background-image:url(img/bgmain.jpg)')
		//для врачей вешаем класс .personal
		.box.content-head
			.content-bread
				a(href="#").content-bread-item.text2 Главная
				a(href="#").content-bread-item.text2 Вопрос-ответ
			.content-main
				.title.h1 Вопрос-ответ
	.box
